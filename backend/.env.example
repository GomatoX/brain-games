# Directus Configuration
# Copy this file to .env and fill in your values

# Database
DB_CLIENT="sqlite3"
DB_FILENAME="./data.db"

# Security Keys (CHANGE THESE for production!)
SECRET="your-random-secret-key-min-32-chars"
KEY="your-random-key-min-32-chars"

# Admin Account
ADMIN_EMAIL="admin@rustycogs.io"
ADMIN_PASSWORD="change-this-password"

# Server
HOST="0.0.0.0"
PORT=8055

# CORS — set to your actual frontend/landing URLs
CORS_ENABLED="true"
CORS_ORIGIN="https://games.rustycogs.io,https://rustycogs.io"

# Public URL — your actual Directus URL
PUBLIC_URL="https://api.rustycogs.io"

# Content Security Policy — allow your frontend domain to be framed
CONTENT_SECURITY_POLICY_DIRECTIVES__FRAME_SRC="'self' https://games.rustycogs.io"
CONTENT_SECURITY_POLICY_DIRECTIVES__CHILD_SRC="'self' blob: https://games.rustycogs.io"
